---
import { Picture } from "astro:assets";
const { scene } = Astro.props;
---
<div class="bg-white shadow-lg w-80 rounded-lg mb-8 mr-8">
    <div class="h-96">
        <Picture  
        class="rounded-t-lg max-h-80"
        src={scene.image} 
        alt="" />
    </div>
    <h3 class="text-center text-xl font-bold mt-2 mb-10 p-2">{scene.name}</h3>
</div>
---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>
    <i class="fa-brands fa-facebook"></i>
    {platform}
</a>

<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background-color: #4c1d95;
        text-decoration: none;
    }
</style>